<%= @total_won_count %> 勝 <%= @total_lost_count %> 負 <%= @total_drew_count %> 分(WIN率: <%= @win_rate %>% Double Chance率:<%= @double_chance_rate %>%)
<br>
1試合あたりの得点数: <%= @got_goals_per_match %>
<br>
1試合あたりの失点数: <%= @gave_goals_per_match %>
<br>
<li>クールごとの成績</li>
<br>
<% (1..3).each do |num1| %>
  <li>第<%= num1 %>クール</li>
  <table border="1">
    <tr>
      <% (1..8).each do |num2| %>
        <th colspan="3">第<%= num2 %>戦</th>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td align="center">勝</td>
        <td align="center">負</td>
        <td align="center">分</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td align="center"><%= @season1_won_count[num2] %></td>
          <td align="center"><%= @season1_lost_count[num2] %></td>
          <td align="center"><%= @season1_drew_count[num2] %></td>
        <% when 2 then %>
          <td align="center"><%= @season2_won_count[num2] %></td>
          <td align="center"><%= @season2_lost_count[num2] %></td>
          <td align="center"><%= @season2_drew_count[num2] %></td>
        <% when 3 then %>
          <td align="center"><%= @season3_won_count[num2] %></td>
          <td align="center"><%= @season3_lost_count[num2] %></td>
          <td align="center"><%= @season3_drew_count[num2] %></td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">勝率</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_won_rate[num2] %>%</td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_won_rate[num2] %>%</td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_won_rate[num2] %>%</td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">DC率</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_double_chance_rate[num2] %>%</td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_double_chance_rate[num2] %>%</td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_double_chance_rate[num2] %>%</td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">平均得点</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_got_goals_per_match[num2] %></td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_got_goals_per_match[num2] %></td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_got_goals_per_match[num2] %></td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">平均失点</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_gave_goals_per_match[num2] %></td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_gave_goals_per_match[num2] %></td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_gave_goals_per_match[num2] %></td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">得点率</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_got_goals_percentage[num2] %>%</td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_got_goals_percentage[num2] %>%</td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_got_goals_percentage[num2] %>%</td>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <% 8.times do %>
        <td colspan="3" align="center">失点率</td>
      <% end %>
    </tr>
    <tr>
      <% 8.times do |num2| %>
        <% case num1 %>
        <% when 1 then %>
          <td colspan="3" align="center"><%= @season1_gave_goals_percentage[num2] %>%</td>
        <% when 2 then %>
          <td colspan="3" align="center"><%= @season2_gave_goals_percentage[num2] %>%</td>
        <% when 3 then %>
          <td colspan="3" align="center"><%= @season3_gave_goals_percentage[num2] %>%</td>
        <% end %>
      <% end %>
    </tr>
  </table>
  <br>
<% end %>
<%= link_to :players do %>
  <button>戻る</button>
<% end %>